{
    "clangd.enabled": true,
    "clangd.fallbackFlags": [""],
    "clangd.arguments": [ "--clang-tidy","--background-index","--header-insertion=never" ],
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.3/clangd_15.0.3/bin/clangd",

    "cmake.lsp.enable": false,
    "cmake.lsp.serverPath": "cmake-language-server",
    "cmake.lsp.buildDirectory": "build",

    "coc.preferences.enableMarkdown": true,
    "coc.preferences.enableLinkedEditing": false,

    "codeLens.position": "top",
    "codeLens.enable": false,

    "colors.enable": true,

    "diagnostic.enableSign": true,
    "diagnostic.signLevel": 4,

    "explorer.file.showHiddenFiles": true,
    "explorer.git.enable": false,

    "inlayHint.enable": false,

    "git.addGBlameToBufferVar": true,
    "git.enableGutters": false,
    "git.gstatus.saveBeforeOpen": true,

    "list.statusLineSegments":[
        "%#CocListMode#-- %{coc#list#status(\"mode\")} --%*",
        "%{coc#list#status(\"loading\")}",
        "%{coc#list#status(\"args\")}",
        "(%L/%{coc#list#status(\"total\")})",
        "%=",
        "%#CocListPath# %l/%L%*"
    ],
    "list.source.diagnostics.pathFormat": "filename",
    "list.height": 15,
    "list.limitLines": 10000,
    "list.source.grep.maxColumns": 1000,
    "list.source.files.filterByName": true,
    "list.source.mru.filterByName": true,
    "list.normalMappings": {
        "<C-j>": "normal:j",
        "<C-k>": "normal:k"
    },

    "markdownlint.config": {
        "MD013": false
    },

    "prettier.printWidth": 80,
    "prettier.proseWrap": "never",

    "semanticTokens.enable": true,

    "suggest.formatItems": [
        "kind",
        "menu",
        "abbr",
        "shortcut"
    ],
    "suggest.labelMaxLength": 80,

    "workspace.bottomUpFiletypes": ["*"],
    "workspace.rootPatterns": [
        ".git",
        ".clang_format",
        ".ignore",
        "build"
    ],
    "workspace.workspaceFolderCheckCwd": false
}
